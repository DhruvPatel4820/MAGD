<% layout("./layouts/boilerPlate.ejs") %>
    <style>
        #filters {
            margin-top: 1.9rem;
            display: flex;
            flex-wrap: wrap;
            /* align-items: center; */
        }

        .filter {
            margin-left: 1rem;
            text-align: center;
            opacity: 0.7;
            margin-top: 0.5rem;
        }

        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }

        .filter p {
            font-size: 0.8rem;
        }

        .flexItem {
            display: flex;
            flex-wrap: nowrap;

        }

        .flexItem>p {
            margin-right: 1rem;
        }

        .tax-info {
            display: none;
        }
        .tax-toggle{
            border: 1px solid black;
            border-radius: 1rem;
            height: 3rem;
            width: 16rem;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-left: 20rem;
        }
    </style>

    <body>

        <!-- <h2>All Listing Data</h2> -->
        <!-- <form method="get" action="/listings/new">
        <button>Create Listing</button>
    </form> -->
        <div id="filters">
            <div class="filter">
                <div><i class="fa-solid fa-ranking-star"></i></div>
                <p>Tranding</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-city"></i></div>
                <p>Iconic Cities</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mountain-city"></i></div>
                <p>Mountains</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <p>Amazing pools</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-cow"></i></div>
                <p>Farms</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-campground"></i></div>
                <p>Camping</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-chess-rook"></i></div>
                <p>Castles</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-umbrella-beach"></i></div>
                <p>Beach</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-ship"></i></div>
                <p>Boats</p>
            </div>

            <div class="tax-toggle">
                <div class="form-check form-switch form-check-reverse">
                    <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                    <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
                </div>
            </div>
        </div>

        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3 ">
            <% for(listing of allListings){%>
                <div class="card col listing-card ">
                    <a href="/listings/<%=listing._id%>" class="listing_link">

                        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_img"
                            style="height: 20rem;">
                        <div class="card-img-overlay">abc</div>
                        <div class="card-body ">
                            <b>
                                <p class="card-title">
                                    <%= listing.title %>
                                </p>
                            </b>
                            <div class="flexItem">
                                <p class="card-price">
                                    &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>/night
                                </p>
                                <p class="tax-info">+18% GST</p>
                            </div>



                        </div>
                    </a>
                </div>
                <% }%>
        </div>
        <script>
            let taxSwitch = document.getElementById("switchCheckDefault")
            taxSwitch.addEventListener("click", () => {
                let taxinfo = document.getElementsByClassName("tax-info")
                for (info of taxinfo) {
                    if (info.style.display != "inline") {
                        info.style.display = "inline"
                    }else{
                        info.style.display = "none"
 
                    }

                }
                // console.log(taxinfo)
            })
        </script>

    </body>